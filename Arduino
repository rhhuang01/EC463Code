const int ledPin = 3; // Define the LED pin number
const int increaseButtonPin = 4; // Define the pin for the button to increase brightness
const int decreaseButtonPin = 5; // Define the pin for the button to decrease brightness
int brightness = 128; // Set an initial brightness value (0-255)

void setup() {
  pinMode(ledPin, OUTPUT); // Configure the LED pin as an output
}

void loop() {
  
  analogWrite(ledPin, brightness); // Turn on the LED with 50% brightness
  delay(12.5); // Delay for 1/40 second (25 milliseconds)
  analogWrite(ledPin, 0); // Turn off the LED
  delay(12.5); // Delay for another 1/40 second

  if (digitalRead(increaseButtonPin) == LOW) {
      // Increase brightness by 25 (limit to 255)
      brightness = min(255, brightness + 5);
    }

    // Check the decrease button
  if (digitalRead(decreaseButtonPin) == LOW) {
    // Decrease brightness by 25 (limit to 0)
    brightness = max(0, brightness - 5);
  }
}
